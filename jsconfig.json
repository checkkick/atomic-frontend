{
	"compilerOptions": {
		"sourceMap": true,
		"allowJs": true,
		"target": "esnext",
		"strict": true,
		"moduleResolution": "Node",
		"module": "esnext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
